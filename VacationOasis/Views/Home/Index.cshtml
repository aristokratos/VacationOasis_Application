                        <p class="BlueOriginFams1">Blue Origin Fams<br /><span class="Medan">Jakarta, Indonesia</span></p>
                    </div>
                }
            }
            <div class="nested displayGrid">
                @foreach (var hotel in Model)
                {
                    @if (hotel.HotelImageCategory == "Most Picked" && hotel.HotelImageId != 1)
                    {
                        <div>
                            <a asp-controller="Home" asp-action="Details" asp-route-Id="@hotel.HotelImageId"><img class="imagestyle_2" src="@hotel.HotelImage" alt="image of house2" /></a>
