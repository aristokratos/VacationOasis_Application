                if (hotel.HotelImageId == 1)
                {
                    <div>
                        <a asp-controller="Home" asp-action="Details" asp-route-Id="@hotel.HotelImageId"><img class="imagestyle_1" src="~/hOTEL iMAGES/BlueOriginFams.png" alt="image of house1" /></a>
